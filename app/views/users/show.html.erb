<h1>Current User</h1>
<p>Welcome, <%= @user.email %>!</p>

<%= link_to "Logout", logout_path %>

<% if current_user.questions.any? %>

  <h2>Here are all of the questions you've asked!</h2>

  <% @user.questions.each do |question| %>
    <h3><%= question.question %></h3>
    <p><%= question.description %></p>
    <p><%= link_to "Delete", question_path(question), :action => 'destroy', :method => :delete %>
  <% end %>

<% else %>

  <h4>You don't have any messages!</h4>

<% end %>
